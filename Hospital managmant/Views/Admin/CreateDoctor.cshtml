@model Hospital_management.Models.DoctorViewModel

@{
    ViewData["Title"] = "Create Doctor";
}

<h1>Create Doctor</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDoctor" method="post">
            <div class="form-group">
                <label asp-for="DeptNo" class="control-label"></label>
                <select asp-for="DeptNo" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "DeptNo", "DeptName"))"></select>
                <span asp-validation-for="DeptNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label"></label>
                <select asp-for="PersonID" class="form-control" asp-items="@(new SelectList(ViewBag.Persons, "ID", "FirstName"))"></select>
                <span asp-validation-for="PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChargesPerVisit" class="control-label"></label>
                <input asp-for="ChargesPerVisit" class="form-control" />
                <span asp-validation-for="ChargesPerVisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientsTreated" class="control-label"></label>
                <input asp-for="PatientsTreated" class="form-control" />
                <span asp-validation-for="PatientsTreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification" class="control-label"></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Doctors">Back to List</a>
</div>
