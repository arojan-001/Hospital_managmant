@model Hospital_management.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<!-- Departments Section -->
<h2>Departments</h2>
<p>
    <a class="btn btn-primary" asp-action="CreateDepartment">Create New Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Departments.FirstOrDefault().DeptNo)</th>
            <th>@Html.DisplayNameFor(model => model.Departments.FirstOrDefault().DeptName)</th>
            <th>@Html.DisplayNameFor(model => model.Departments.FirstOrDefault().Description)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Departments)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DeptNo)</td>
                <td>@Html.DisplayFor(modelItem => item.DeptName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a class="btn btn-info" asp-action="EditDepartment" asp-route-id="@item.DeptNo">Edit</a> |
                    <a class="btn btn-danger" asp-action="DeleteDepartment" asp-route-id="@item.DeptNo">Delete</a> |
                    <a class="btn btn-primary" asp-action="DepartmentDetails" asp-route-id="@item.DeptNo">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Doctors Section -->
<h2>Doctors</h2>
<p>
    <a class="btn btn-primary" asp-action="CreateDoctor">Create New Doctor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().DoctorID)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().DeptNo)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().PersonID)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().ChargesPerVisit)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().PatientsTreated)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().Qualification)</th>
            <th>@Html.DisplayNameFor(model => model.Doctors.FirstOrDefault().Specialization)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctors)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DoctorID)</td>
                <td>@Html.DisplayFor(modelItem => item.DeptNo)</td>
                <td>@Html.DisplayFor(modelItem => item.PersonID)</td>
                <td>@Html.DisplayFor(modelItem => item.ChargesPerVisit)</td>
                <td>@Html.DisplayFor(modelItem => item.PatientsTreated)</td>
                <td>@Html.DisplayFor(modelItem => item.Qualification)</td>
                <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                <td>
                    <a class="btn btn-info" asp-action="EditDoctor" asp-route-id="@item.DoctorID">Edit</a> |
                    <a class="btn btn-danger" asp-action="DeleteDoctor" asp-route-id="@item.DoctorID">Delete</a> |
                    <a class="btn btn-primary" asp-action="DoctorDetails" asp-route-id="@item.DoctorID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
