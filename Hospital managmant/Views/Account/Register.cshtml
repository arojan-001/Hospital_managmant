@model Hospital_management.Models.CombinedViewModel

<form asp-action="Register" method="post" id="combinedForm">
    <div id="registration-form">
        <h2>Register</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Registration.Email"></label>
            <input asp-for="Registration.Email" class="form-control" />
            <span asp-validation-for="Registration.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.Password"></label>
            <input asp-for="Registration.Password" type="password" class="form-control" />
            <span asp-validation-for="Registration.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.ConfirmPassword"></label>
            <input asp-for="Registration.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="Registration.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.FirstName"></label>
            <input asp-for="Registration.FirstName" class="form-control" />
            <span asp-validation-for="Registration.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.LastName"></label>
            <input asp-for="Registration.LastName" class="form-control" />
            <span asp-validation-for="Registration.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.MiddleName"></label>
            <input asp-for="Registration.MiddleName" class="form-control" />
            <span asp-validation-for="Registration.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Registration.Role"></label>
            <select asp-for="Registration.Role" class="form-control">
                <option value="Doctor">Doctor</option>
                <option value="Patient">Patient</option>
            </select>
            <span asp-validation-for="Registration.Role" class="text-danger"></span>
        </div>
        <button type="button" class="btn btn-primary" onclick="showAdditionalInfo()">Next</button>
    </div>

    <div id="additional-info-form" style="display:none;">
        <h2>Additional Information</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.PhoneNumber"></label>
            <input asp-for="AdditionalInfo.PhoneNumber" class="form-control" />
            <span asp-validation-for="AdditionalInfo.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.Address"></label>
            <textarea asp-for="AdditionalInfo.Address" class="form-control"></textarea>
            <span asp-validation-for="AdditionalInfo.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.Country"></label>
            <input asp-for="AdditionalInfo.Country" class="form-control" />
            <span asp-validation-for="AdditionalInfo.Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.City"></label>
            <input asp-for="AdditionalInfo.City" class="form-control" />
            <span asp-validation-for="AdditionalInfo.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.BirthDate"></label>
            <input asp-for="AdditionalInfo.BirthDate" class="form-control" />
            <span asp-validation-for="AdditionalInfo.BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.Gender"></label>
            <select asp-for="AdditionalInfo.Gender" class="form-control">
                <option value="M">Male</option>
                <option value="F">Female</option>
                <option value="O">Other</option>
            </select>
            <span asp-validation-for="AdditionalInfo.Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdditionalInfo.BloodGroup"></label>
            <input asp-for="AdditionalInfo.BloodGroup" class="form-control" />
            <span asp-validation-for="AdditionalInfo.BloodGroup" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <script>
        function showAdditionalInfo() {
            var registrationForm = document.getElementById('registration-form');
            var additionalInfoForm = document.getElementById('additional-info-form');

            // Validate registration form before showing additional info form
            var form = document.getElementById('combinedForm');
            if (form.checkValidity()) {
                registrationForm.style.display = 'none';
                additionalInfoForm.style.display = 'block';
            } else {
                form.reportValidity(); // Trigger HTML5 validation UI
            }
        }
    </script>
}
